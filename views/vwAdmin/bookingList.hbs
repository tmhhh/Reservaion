      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            {{! <th>
              <span class="custom-checkbox">
                <input type="checkbox" id="selectAll" />
                <label for="selectAll"></label>
              </span>
            </th> }}
            <th>Reservation ID</th>
            <th>Diner Name</th>
            <th>Restaurant</th>
            <th>Phone</th>
            <th>Check in</th>
            <th>Number of Diners</th>
            <th>Note</th>
          </tr>
        </thead>
        <tbody>
          {{#if this.BookingList}}
            {{#each this.BookingList}}

              <tr>
                {{! <td>
                  <span class="custom-checkbox">
                    <input
                      type="checkbox"
                      id="checkbox1"
                      name="options[]"
                      value="1"
                    />
                    <label for="checkbox1"></label>
                  </span>
                </td> }}
                <td>{{id}}</td>
                <td>{{userFName}}</td>
                <td>{{resName}}</td>
                <td>{{userPhone}}</td>
                <td>{{ReserveTime}}</td>
                <td>{{NumOfDiners}}</td>
                <td>{{Note}}</td>

                <td>
                  <a href="/manager/confirm?id={{id}}" class="confirm"><i
                      class="fas fa-check-square"
                      title="Confirm"
                    ></i></a>
                  <a
                    href="/manager/cancel?id={{id}}"
                    class="delete"
                    role="button"
                  ><i class="fas fa-window-close" title="Cancel"></i></a>
                </td>
              </tr>

            {{/each}}

          {{/if}}

        </tbody>
      </table>
      <div class="clearfix">
        <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
        <ul class="pagination">
          <li class="page-item disabled"><a href="#">Previous</a></li>
