<div class="container edit-delete-container">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title bg-dark">
        <h2>Manage <b>Restaurant</b></h2>
        <!-- <div class="row">
                            <div class="col-xs-6">
                                <h2>Manage <b>Employees</b></h2>
                            </div>
                            <div class="col-xs-6">
                                <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i
                                        class="material-icons">&#xE147;</i> <span>Add New Employee</span></a>
                                <a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i
                                        class="material-icons">&#xE15C;</i> <span>Delete</span></a>
                            </div>
                        </div> -->
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
           
            <th>ID</th>
            <th>Restaurant</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Open</th>
            <th>Close</th>
            <th>Price</th>
        
          </tr>
        </thead>
        <tbody>
          {{#if this.Restaurants}}
          {{#each this.Restaurants}}

          <tr>

               <td>{{resID}}</td>
            <td>{{resName}}</td>
            <td>{{resAddress}}</td>
            <td>{{resPhone}}</td>
            <td>{{resOpen}}</td>
            <td>{{resClose}}</td>
            <td>{{resPrice}}</td>

            <td>
              <a href="#editEmployeeModal{{resID}}" class="edit" data-toggle="modal"><i class="fas fa-cog"
                  data-toggle="tooltip" title="Edit"></i></a>
              <a href="/{{../user_type}}/product/delete/{{resID}}" class="delete" role="button"><i
                  class="fas fa-trash-alt" title="Delete"></i></a>
            </td>
          </tr>

          <div id="editEmployeeModal{{resID}}" class="modal fade">
            <div class="modal-dialog">
              <div class="modal-content">
                <form action="/{{../user_type}}/product/edit" method="POST" enctype="multipart/form-data">
                  <div class="modal-header">
                    <h4 class="modal-title">Edit Restaurant</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label>ID: </label>
                      <input name="resID" value="{{resID}}" readonly />
                    </div>
                    <div class="form-group">
                      <label>Name</label>
                      <input name="resName" type="text" class="form-control" value="{{resName}}" required />
                    </div>

                    <div><i class="fas fa-utensils"></i> Thể loại:
                      <select name="resCate" id="">
                        {{#each ../listCate}}
                        {{#compare ../resCate cateID }}
                        <option value="{{cateID}}" selected>{{cateName}}</option>
                        {{else}}
                        <option value="{{cateID}}">{{cateName}}</option>

                        {{/compare}}
                        {{/each}}

                      </select>
                    </div>


                    <div class="form-group">
                      <label>Phone</label>
                      <input name="resPhone" type="text" class="form-control" value="{{resPhone}}" required />
                    </div>
                    <div class="form-group">
                      <label>Open Time</label>
                      <input name="resOpen" type="text" class="form-control" value="{{resOpen}}" required />
                    </div>
                    <div class="form-group">
                      <label>Close Time</label>
                      <input name="resClose" type="text" class="form-control" value="{{resClose}}" required />
                    </div>
                    <div class="form-group">
                      <label>Address</label>
                      <input name="resAdd" type="text" class="form-control" value="{{resAddress}}" required />
                    </div>
                    <div class="form-group">
                      <label>Price</label>
                      <input name="resPrice" type="text" class="form-control" value="{{resPrice}}" required />
                    </div>
                    {{! <div class="form-group">
                      <label>Menu</label>
                      <input type="text" class="form-control" required>
                    </div> }}
                    <div class="form-grp">
                      <label>Pictures</label>
                      <input type="file" name="resImage" multiple class="form-control" />
                    </div>
                  </div>
                  <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
                    <input type="submit" class="btn btn-info" value="Save" />
                  </div>
                </form>
              </div>
            </div>
          </div>
          {{/each}}

          {{/if}}

        </tbody>
      </table>
      <div class="clearfix">
        <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div>
        <ul class="pagination">
          <li class="page-item disabled"><a href="#">Previous</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Next</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>